doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Reviews
        p.nav
            a(href='/update-cobj') Add to this table
        table.crm-table
            thead
                tr
                    th.pink-header Author
                    th.pink-header Rating
                    th.pink-header Review Text
            tbody
                each review in data
                    tr
                        td= review.properties.author                 
                        td= review.properties.rating
                        td= review.properties.review_text